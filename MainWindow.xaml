<Window x:Class="DeskClock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" ResizeMode="NoResize" ShowInTaskbar="False" WindowStyle="None" SizeToContent="WidthAndHeight" AllowsTransparency="True"
        MouseLeftButtonDown="DragMove" MouseDoubleClick="OpenSettings">
    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Exit" Click="Exit" />
        </ContextMenu>
    </Window.ContextMenu>
    <ContentControl Content="{Binding Clock}" />  
</Window>
